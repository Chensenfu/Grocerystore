<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "http://mybatis.org/dtd/mybatis-3-mapper.dtd" "mybatis-3-mapper.dtd" >
<mapper namespace="com.mapper.UserMapper">
    <select id="queryByNameAndPwd" resultType="com.entity.User">
        select userId,name,password,tel from user where (name=#{name} or tel=#{name}) and password=#{pwd}
    </select>

    <insert id="add">
        insert into user(name,password,tel) values(#{user.name},#{user.password},#{user.tel})
    </insert>
</mapper>
